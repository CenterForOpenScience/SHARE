{% extends "oaipmh/base.xml" %}

{% block content %}
    <ListMetadataFormats>
        {% for metadata_format in formats %}
        <metadataFormat>
            <metadataPrefix>{{ metadata_format.prefix }}</metadataPrefix>
            <schema>{{ metadata_format.schema }}</schema>
            <metadataNamespace>{{ metadata_format.namespace }}</metadataNamespace>
        </metadataFormat>
        {% endfor %}
    </ListMetadataFormats>
{% endblock %}
